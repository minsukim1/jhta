<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0" metadata-complete="true">

	<context-param>
		<param-name>maxUploadFileSize</param-name>
		<param-value>10485760</param-value>
	</context-param>
	<context-param>
		<param-name>maxUploadFileCount</param-name>
		<param-value>10</param-value>
	</context-param>
	<context-param>
		<param-name>imageSaveDirectory</param-name>
		<param-value>C:/Projects/web_workspace/withice/WebContent/images/</param-value>
	</context-param>

	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<include-prelude>/common/session.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>


</web-app>
