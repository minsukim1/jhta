package control;

public class practice1 {

	public static void main(String[] args) {
		int sum = 0;
		int num  = 1;
		int count = 0;
		while(sum<100) {
			num++;
			if(num%2==1) {
				num = num*1;
			} else {
				num = num*-1;
			}
			sum +=num;
			count++;
			num = Math.abs(num);
		}
		System.out.println("sum = "+sum+" num = "+num);
	}
}
